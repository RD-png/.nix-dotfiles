{ inputs, config, pkgs, lib, ... }: {
  imports = [
    ./home.nix
    ./hardware-configuration.nix
  ];

  networking.hostName = "desktop";

  services = {
    autorandr = {
      enable = true;
      profiles = {
        "desktop" = {
          fingerprint = {
            "DisplayPort-0" = "";
            "DisplayPort-1" = "";
          };
          config = {
            "DisplayPort-0" = {
              enable = true;
              primary = true;
              position = "0x0";
              mode = "2560x1440";
              rate = "240.00";
            };
            "DisplayPort-1" = {
              enable = true;
              position = "2560x0";
              mode = "1920x1080";
              rate = "144.00";
            };
          };
        };
      };
    };

    xserver = {
      videoDrivers = [ "amdgpu" ];
    };

    libinput = {
      mouse = {
        accelProfile = "flat";
      };
    };
  };
}
